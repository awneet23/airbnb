  <% layout('/layouts/boilerplate.ejs')%>
   
<div class="row">
  <div class="col-8 offset-2">
    <h2>create a new listing</h2>
<form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" > 
  <div class="mb-3">
    <label for="title" class="form-label"> Title</label>
    <input name="title" placeholder="enter title" type="text" class="form-control" id="title" required value="<%=listing.title%>">
    
       <div class="invalid-feedback">
       write a title
      </div>
  </div>
 
  
<div class="mb-3">
<label for="description" class="form-label"> Description</label>
<textarea name="description" placeholder="description" class="form-control" id="description" required>value="<%=listing.description%>"</textarea >
  <div class="invalid-feedback">
    Please enter a message in the textarea.
  </div>
</div>

<div class="mb-3">
<label for="image" class="form-label"> Image url</label>
<input name="image" placeholder="enter image url" type="text" class="form-control" id="image" value="<%=listing.image%>">
<div class="invalid-feedback">
  Give a url
 </div>
</div>
<div class="row">
<div class="mb-3 col-4" >
<label for="price" class="form-label"> Price</label>
<input name="price" placeholder="enter price" type="number" class="form-control" id="price" required value="<%=listing.price%>">
<div class="invalid-feedback">
  write a valid price
 </div>
</div>

<div class="mb-3 col-8" >
<label for="country" class="form-label"> country</label>
<input name="country" placeholder="enter country"  type="text" id="country" class="form-control" required value="<%=listing.country%>">
<div class="invalid-feedback">
  write a country
</div>
</div>
</div>

<div class="mb-3">
<label for="location" class="form-label"> Location</label>
<input name="location" placeholder="enter location" type="text" class="form-control" id="location" required value="<%=listing.location%>">
<div class="invalid-feedback">
  write a location
 </div>
</div>


<div class="d-flex justify-content-center mt-3 mb-3" >
<button class="btn btn-dark">Add</button>
</div>
</form>
</div>
</div>



